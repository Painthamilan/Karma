<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/main_theme">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        android:textColor="@color/blue"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:text="Top Items"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:text="Recently Added"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_instants" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/iv_offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent"
        android:layout_marginBottom="5dp"/>
    <ImageView
        android:id="@+id/iv_offers"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_height="60dp"
        android:scaleType="fitStart"
        android:src="@drawable/offers"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/tv_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:text="Offer Zone"
        app:layout_constraintEnd_toEndOf="@id/iv_offers"
        app:layout_constraintTop_toTopOf="@id/iv_offers"
        app:layout_constraintBottom_toBottomOf="@id/iv_offers"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_topItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home" />

    <ImageView
        android:id="@+id/iv_instants"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="130dp"
        android:scaleType="fitStart"
        android:src="@drawable/instant_delivery"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_topItems" />

    <TextView
        android:id="@+id/tv_instant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:text="Instant Delivery"
        app:layout_constraintEnd_toEndOf="@id/iv_instants"
        app:layout_constraintTop_toTopOf="@id/iv_instants"
        app:layout_constraintBottom_toBottomOf="@id/iv_instants"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="175dp" />
</androidx.constraintlayout.widget.ConstraintLayout>